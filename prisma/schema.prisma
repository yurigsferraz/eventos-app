model Usuario {
  id      Int      @id @default(autoincrement())
  nome    String
  email   String   @unique
  eventos Evento[]
}

model Evento {
  id            Int        @id @default(autoincrement())
  nome          String
  descricao     String
  codigo        String
  max_pessoas   Int
  data          String
  hora          String
  criadorId     Int
  participantes Usuario[]
  tipoEvento    TipoEvento @relation(fields: [tipoEventoId], references: [id])
  tipoEventoId  Int
}

model TipoEvento {
  id     Int      @id @default(autoincrement())
  nome   String
  codigo String
  Evento Evento[]
}
